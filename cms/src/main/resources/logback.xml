<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<!-- Driver Configuration Configuration Attribute: debug - true Show Logback 
	Internal Logging - false Hide Logback Internal Logging scan - true Automaticaly 
	reloads Logging configuration Default scanning interval is 60 seconds - false 
	Don't reload configuration -->
<configuration debug="false" scan="true">
	<!-- Logback Console Appender This Appender is responsible for writing to 
		the Cloverleaf logging -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<!--pattern>%d %5p %c{1}:%L - %m%n</pattern -->
			<pattern>%-13(%d{HH:mm:ss.SSS}) | %-5level | %-50(%c{1}) |
				%-30(%M:%L) | %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Logback Logger Configuration -->
	<logger name="ch.qos.logback" level="OFF" />
	<logger name="org.springframework" level="INFO" />
	<logger name="org.springframework.security" level="DEBUG" />
	<logger name="org.vaadin" level="INFO" />
	<logger name="org.vaadin.spring" level="INFO" />

	<!-- Logback Root Appender -->
	<root level="OFF">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>